#!/bin/sh
cd gallery


for d in *; do
  cd $d
  mkdir thumbs
  for f in *.{jpg,JPG}; do 
    if [ ! -f "thumbs/$f" ]; then
      echo "creating thumbnail for $f"
      mv $f $f.bak
      convert -auto-orient $f.bak $f
      rm $f.bak
      convert -thumbnail x200 $f thumbs/$f
    fi
  done

  cd -
done
